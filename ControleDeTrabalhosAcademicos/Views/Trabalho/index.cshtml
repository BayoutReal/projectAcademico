@model IEnumerable<ControleDeTrabalhosAcademicos.Models.Trabalho>

@{
    ViewData["Title"] = "Trabalhos";
}

<h2>Trabalhos</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().TrabalhoId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Tipo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TrabalhoId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TrabalhoId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TrabalhoId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TrabalhoId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<p>
    <a asp-action="Create">Create New</a>
</p>
