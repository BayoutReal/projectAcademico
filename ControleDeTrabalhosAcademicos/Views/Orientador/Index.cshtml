@model IEnumerable<ControleDeTrabalhosAcademicos.Models.Orientador>

@{
    ViewData["Title"] = "Orientadores";
}

<h2>Orientadores</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().OrientadorId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Curso)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrientadorId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Curso)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OrientadorId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.OrientadorId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OrientadorId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<p>
    <a asp-action="Create">Create New</a>
</p>
